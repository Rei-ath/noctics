#!/usr/bin/env bash
set -euo pipefail

BOOTSTRAP_URL="https://raw.githubusercontent.com/noctics/noctics/main/installer/bootstrap.py"

tmpdir="$(mktemp -d)"
cleanup() {
  rm -rf "$tmpdir"
}
trap cleanup EXIT

curl -fsSL "$BOOTSTRAP_URL" -o "$tmpdir/bootstrap.py"

exec python3 "$tmpdir/bootstrap.py" "$@"
